@model LasmartDots.Models.Dot
@{
    ViewBag.Title = "Добавление точки";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="PosX" class="control-label">Позиция по X</label>
        <input type="number" asp-for="PosX" class="form-control" />
    </div>    
    <div class="form-group">
        <label asp-for="PosX" class="control-label">Позиция по Y</label>
        <input type="number" asp-for="PosY" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Radius" class="control-label">Радиус</label>
        <input type="number" asp-for="Radius" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label">Цвет</label>
        <input type="color" asp-for="Color" class="form-control color-picker"/>
    </div>    
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>